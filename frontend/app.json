{
  "expo": {
    "name": "VocalClerk",
    "slug": "VocalClerk",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/your-project-id"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vocalclerk.app",
      "buildNumber": "1",
      "jsEngine": "hermes",
      "config": {
        "usesNonExemptEncryption": false
      },
      "bundleUrl": "./ios/main.jsbundle",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "VocalClerk needs microphone access to record voice input for creating tasks",
        "NSSpeechRecognitionUsageDescription": "VocalClerk needs speech recognition to convert your voice to text for task creation"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.vocalclerk.app",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "jsEngine": "hermes",
      "permissions": [
        "INTERNET",
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO"
      ],
      "bundleUrl": "./android/app/src/main/assets/index.android.bundle"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
